# Environment Configuration Example
# Copy to .env.local for development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/grower_slot_dev
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password_here
PGDATABASE=grower_slot_dev

# Application Configuration
NODE_ENV=development
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
PORT=5000

# Feature Flags - Core Features (Always On)
VITE_FEATURE_ADMIN_CALENDAR=true
VITE_FEATURE_CSV_EXPORT=true
VITE_FEATURE_AUDIT_TRAIL=true

# Feature Flags - Staged Rollout (Default: false)
VITE_FEATURE_ADMIN_TEMPLATES=false
VITE_FEATURE_NEXT_AVAILABLE=false

# Email Configuration (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourpackhouse.com

# Session Configuration
SESSION_SECRET=your-session-secret-key-minimum-32-characters

# Development Settings
VITE_DEV_MODE=true
VITE_API_BASE_URL=http://localhost:5000/v1

# CI/Testing Configuration (for CI environments)
CI=false
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# Production Overrides (set these in production)
# NODE_ENV=production
# VITE_DEV_MODE=false
# VITE_API_BASE_URL=https://yourapp.com/v1